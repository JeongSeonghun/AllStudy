<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jshstudy.contentsave.ui.MainActivity">

    <TextView
        android:id="@+id/tv_con_save_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContentSave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <Button
        android:id="@+id/btn_run_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sqlite"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_con_save_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Button
        android:id="@+id/btn_run_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preference"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_run_db"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
