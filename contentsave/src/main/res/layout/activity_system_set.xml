<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jshstudy.contentsave.ui.SystemSetActivity">

    <TextView
        android:id="@+id/tv_title_set1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/sb_set1"
        android:layout_width="0px"
        android:layout_height="62px"

        android:background="@null"
        android:max="255"
        android:paddingEnd="0px"
        android:paddingStart="0px"
        android:progress="1"
        android:progressDrawable="@drawable/seekbar"
        android:splitTrack="false"
        android:thumb="@drawable/btn_handler"
        android:thumbOffset="4px"

        app:layout_constraintTop_toBottomOf="@id/tv_title_set1"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_set1"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9px"
        android:text="-5"
        android:textSize="30px"
        app:layout_constraintLeft_toLeftOf="@+id/sb_set1"
        app:layout_constraintTop_toBottomOf="@+id/sb_set1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0px"
        android:layout_marginRight="8px"
        android:text="0"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintLeft_toRightOf="@+id/textView8"
        app:layout_constraintRight_toLeftOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintRight_toRightOf="@+id/sb_set1"
        app:layout_constraintTop_toTopOf="@+id/textView9" />



    <TextView
        android:id="@+id/tv_value_set1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="val1"
        app:layout_constraintTop_toBottomOf="@id/sb_set1"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_set1"/>

</android.support.constraint.ConstraintLayout>
