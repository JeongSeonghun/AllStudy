<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jshstudy.allstudy">

    <application
        android:name=".AllStudyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".receiver.JBroadcastReceiver">
            <intent-filter>
                <action android:name="com.jshstudy.allstudy.wakeup" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.engstudy.QuantityAdjectivesActivity" />
        <activity android:name=".ui.engstudy.EngStudyActivity" />
        <activity android:name=".ui.engstudy.EngChkWordActivity" />
        <activity android:name=".ui.engstudy.SearchEngActivity" />
        <activity android:name=".ui.SettingActivity" />
        <activity android:name=".ui.engstudy.EngEditWordActivity" />
        <activity android:name=".ui.engstudy.EngEditSubActivity"
            android:theme="@style/Base.V7.Theme.AppCompat.Dialog"/>
    </application>

</manifest>