<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jshstudy.communicatestudy.ui.ComAct1Activity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/act11send_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/send_act1title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_request"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/req_act1key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_request_code"
            app:layout_constraintTop_toBottomOf="@+id/send_act1title_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/req_act1send_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/req_act1key_tv"
            app:layout_constraintLeft_toRightOf="@+id/req_act1key_tv"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/int_act1key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_request_code"
            app:layout_constraintTop_toBottomOf="@+id/req_act1key_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/int_act1send_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/int_act1key_tv"
            app:layout_constraintLeft_toLeftOf="@+id/req_act1send_et"/>

        <TextView
            android:id="@+id/str_act1key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_request_code"
            app:layout_constraintTop_toBottomOf="@+id/int_act1key_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/str_act1req_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/str_act1key_tv"
            app:layout_constraintLeft_toLeftOf="@+id/req_act1send_et"/>

        <Button
            android:id="@+id/send_act1req_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/start"
            app:layout_constraintTop_toBottomOf="@+id/str_act1key_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ac1res_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/act11send_cl">
        <TextView
            android:id="@+id/title_act1res_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_response"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/res_act1key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_res_code"
            app:layout_constraintTop_toBottomOf="@+id/title_act1res_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/res_act1res_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/res_act1key_tv"
            app:layout_constraintTop_toTopOf="@id/res_act1key_tv"/>

        <TextView
            android:id="@+id/res_act1key_tvreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_request_code"
            app:layout_constraintTop_toBottomOf="@+id/title_act1res_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/resreq_act1res_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/res_act1key_tvreq"
            app:layout_constraintTop_toTopOf="@id/res_act1key_tvreq"/>

        <TextView
            android:id="@+id/recint_act1key_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/key_int"
            app:layout_constraintTop_toBottomOf="@+id/title_act1res_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/recint_act1res_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/recint_act1key_tv"
            app:layout_constraintTop_toTopOf="@id/recint_act1key_tv"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
